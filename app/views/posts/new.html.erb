<% provide :title, "Create post" %>
<h2>Create a new post</h2>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @post do |f| %>

			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>

			<%= f.label :body %>
			<%= f.text_area :body, class: 'form-control' %>

			<%= f.submit "Submit post", class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>